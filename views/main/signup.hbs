{{>header}}
<form autocomplete="off" method="POST" action="/signup">
    <h4>Register Here</h4>
  <div class="form-group">
    <label for="exampleInputEmail1">User Name</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" style="width: 500px;">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password" style="width: 500px;">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{>footer}}